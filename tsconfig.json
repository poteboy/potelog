{
  // https://v3.nuxtjs.org/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"],
      "@core": ["./src/components/core/index.ts"]
    },
    "resolveJsonModule": true,
    "noImplicitAny": false
  },
  "include": ["**/*.ts", "**/*.vue", "src/style/core/Text/Text.tsx"],
  "exclude": ["node_modules"]
}
